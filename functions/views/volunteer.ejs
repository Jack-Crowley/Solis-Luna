<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Solis, Luna, Arts, Solis and Luna Art">
    <meta name="description" content="a non-profit charity for helping students express themselves">
    <title>Solis and Luna Arts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@500&family=Roboto+Mono:wght@700&display=swap"
        rel="stylesheet">
    <link
        href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&family=Kanit:wght@500&family=Roboto+Mono:wght@700&display=swap"
        rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit&family=Roboto+Mono:wght@700&display=swap"
        rel="stylesheet">
    <link rel="apple-touch-icon" sizes="180x180" href="./images/Favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="./images/Favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="./images/Favicon/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="stylesheet" href="./styles/navbar.css">
    <link rel="stylesheet" href="./styles/revealingText.css">
    <link rel="stylesheet" href="./styles/footer.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400&family=Lato:wght@400&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="/styles/banner.css">
    <link rel="stylesheet" href="/styles/sections.css">
    <link rel="stylesheet" href="/styles/volunteer.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid nav">
            <a class="navbar-brand" href="/">
                <img src="/images/solis.png" alt="" height="100">
            </a>
            <a class="nav-link nav-header">Solis and Luna Arts</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" aria-current="page" href="/about">About Us</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Teams
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="/executives">Executive Team</a></li>
                            <li><a class="dropdown-item" href="/writing">Writing Team</a></li>
                            <li><a class="dropdown-item" href="/getinvolved">Venues</a></li>
                            <% regions.forEach((region) => { %>
                                <% if (region.expanded) { %>
                                    <li>
                                        <a class="dropdown-item" href="#"><%=region.name%> &raquo;</a>
                                        <ul class="dropdown-menu dropdown-submenu dropdown-submenu-right">
                                            <% region.regions.forEach((subsection) => { %>
                                                <li><a class="dropdown-item" href="/region/<%=region.id%>/<%=subsection.id%>"><%=subsection.name%></a></li>
                                            <% }) %>
                                        </ul>
                                    </li>
                                <% } else { %>
                                    <li><a class="dropdown-item" href="/region/<%=region.id%>"><%=region.name%></a></li>  
                                <% } %>
                            <% }) %>
                        </ul>
                    </li>
                    <li class="nav-item blog">
                        <a class="nav-link" href="/blog">Blog</a>
                    </li>
                    <li class="nav-item blog">
                        <a class="nav-link" href="/podcast">Podcast</a>
                    </li>
                    <li class="nav-item blog">
                        <a class="nav-link" href="/press">Press</a>
                    </li>
                    <li class="nav-item blog" style="color:black !important;">
                        <a class="nav-link" href="/videos">Videos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="picture">
        <img class='w-100 img-wide max-h-px' src="/images//Banners/performing.jpg" alt="" />
        <div class="box">
            <h2>Volunteering</h2>
            <h1 class="text-white image-text">Get connected in your community.</h1>
        </div>
    </div>
    <div class="spacer"></div>
    <div class="information section2 text-center">
        <div class="informationText">
            <h1>Information</h1>
            <h3>Members of the Solis And Luna Arts are highly motivated people in their communities! They donate their time in order to host events which cultivate grown in mental health.</h3>
        </div>
    </div>
    <div class="qualifications section3 text-center">
        <div class="qualificationText">
            <h1>Requirements</h1>
            <div class="requirements">
                <h2>- Region Director</h2>
                <h4>- At least 15 years old</h4>
                <h4>- Leadership experience</h4>
                <h4>- Responsible</h4>
                <h4>- At least commit 2 hours a week</h4>
                <h4>- Host at least 2 to 3 performances per year</h4>
                <h4>- Must be able to check messages quickly</h4>
            </div>
            <div class="requirements">
                <h2>Writing Department</h2>
                <h4>- Able to write articles a few times a year</h4>
                <h4>- Must be able to check messages quickly</h4>
            </div>
            <div class="requirements">
                <h2>Music Department</h2>
                <h4>- Must have prior experience on your instrument</h4>
                <h4>- Must be able to check messages quickly</h4>
            </div>
        </div>
    </div>
    <div class="volunteerInformation section1">
        <div class="volunteerText text-center">
            <h1>Volunteer</h1>
            <div class="inputThings">
                <input type="" placeholder="Select a region!">
                <% regionsList = ["California - Los Angelos", "New Jersey", "New York", "Washington", "California - Other Place"] %>
                <% regionsList.sort() %>
                <ul class="regionOptions">
                    <% regionsList.forEach((rList) => { %>
                        <li data-director="Person PersonLastName" data-email="region@solisandlunaarts.com"><%= rList %></li>
                    <% }) %>
                    <li class="newOne">Become a Region Director!</li>
                </ul>
            </div>
        </div>
        <div class="rd">
            <h1>Becoming a Region Director</h1>
            <h2>Fill out the form below to apply to run a Solis and Luna Arts in your community</h2>
            <a href="">Apply Here!</a>
        </div>
        <div class="regionBlob text-center">
            <h1>New Jersey</h1>
            <h6><span class="title">Region Director: </span><span class="director">Person PersonLastName</span></h6>
            <h6><span class="title">Contact Email: </span><span class="email">region@solisandlunaarts.com</span></h6>
            <a href="" class="applicationForm">Apply Now</a>
        </div>
    </div>
    <div class="extraSpace"></div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <script src="/scripts/nav.js"></script>
    <script src="/scripts/revealingText.js"></script>
    <script src="/scripts/volunteer.js"></script>
    <script src="/scripts/yearlyReportPopup.js"></script>
</body>

</html>