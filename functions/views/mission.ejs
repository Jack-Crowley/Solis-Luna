    <style>
        /* Simple slide/fade animations for mission page elements */
        .animate-up, .animate-left, .animate-right, .animate-fade {
            opacity: 0;
            transition: transform 700ms cubic-bezier(.2,.9,.2,1), opacity 700ms ease;
            will-change: transform, opacity;
        }

        .animate-up { transform: translateY(30px); }
        .animate-left { transform: translateX(-40px); }
        .animate-right { transform: translateX(40px); }
        .animate-fade { transform: none; }

        .in-view.animate-up,
        .in-view.animate-left,
        .in-view.animate-right,
        .in-view.animate-fade {
            transform: none;
            opacity: 1;
        }

        /* allow a parent gaining `in-view` to reveal child elements that use animate-fade */
        .in-view .animate-fade {
            transform: none;
            opacity: 1;
        }

        /* Stagger helpers for children */
        .stagger > * {
            transition-delay: calc(var(--stagger-index, 0) * 80ms);
        }

        /* Small tweak so images look nicer when sliding in */
        .mission .image .chloe img { display: block; max-width: 100%; height: auto; }

        @media (prefers-reduced-motion: reduce) {
            .animate-up, .animate-left, .animate-right, .animate-fade {
                transition: none !important;
                transform: none !important;
                opacity: 1 !important;
            }
        }
    </style>
