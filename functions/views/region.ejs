<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Solis, Luna, Arts, Solis and Luna Art">
    <meta name="description" content="a non-profit charity for helping students express themselves">
    <title>Solis and Luna Arts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@500&family=Roboto+Mono:wght@700&display=swap"
        rel="stylesheet">
    <link
        href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&family=Kanit:wght@500&family=Roboto+Mono:wght@700&display=swap"
        rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Kanit&family=Roboto+Mono:wght@700&display=swap"
        rel="stylesheet">
    <link rel="apple-touch-icon" sizes="180x180" href="./images/Favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="./images/Favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="./images/Favicon/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="stylesheet" href="/styles/navbar.css">
    <link rel="stylesheet" href="/styles/revealingText.css">
    <link rel="stylesheet" href="/styles/footer.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400&family=Lato:wght@400&display=swap"
        rel="stylesheet">


    <link rel="stylesheet" href="/styles/banner.css">
    <link rel="stylesheet" href="/styles/events.css">
    <link rel="stylesheet" href="/styles/sections.css">
    <link rel="stylesheet" href="/styles/region.css">
    <link rel="stylesheet" href="/styles/team.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid nav">
            <a class="navbar-brand" href="/">
                <img src="/images/solis.png" alt="" height="100">
            </a>
            <a class="nav-link nav-header" style="color:#01033e">Solis and Luna Arts</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" aria-current="page" href="/about">About Us</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Teams
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="/executives">Executive Team</a></li>
                            <li><a class="dropdown-item" href="/writing">Writing Team</a></li>
                            <% regions.forEach((region)=> { %>
                                <% if (region.expanded) { %>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <%=region.name%> &raquo;
                                        </a>
                                        <ul class="dropdown-menu dropdown-submenu dropdown-submenu-left">
                                            <% region.regions.forEach((subsection)=> { %>
                                                <li><a class="dropdown-item"
                                                        href="/region/<%=region.id%>/<%=subsection.id%>">
                                                        <%=subsection.name%>
                                                    </a></li>
                                                <% }) %>
                                        </ul>
                                    </li>
                                    <% } else { %>
                                        <li><a class="dropdown-item" href="/region/<%=region.id%>">
                                                <%=region.name%>
                                            </a></li>
                                        <% } %>
                                            <% }) %>
                        </ul>
                    </li>
                    <li class="nav-item blog">
                        <a class="nav-link" href="/blog">Blog</a>
                    </li>
                    <li class="nav-item blog">
                        <a class="nav-link" href="/podcast">Podcast</a>
                    </li>
                    <li class="nav-item blog">
                        <a class="nav-link" href="/press">Press</a>
                    </li>
                    <li class="nav-item blog">
                        <a class="nav-link" href="/getinvolved">Get Involved</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="regular">
        <div class="picture">
            <img src="<%= picture %>" alt="" />
            <div class="box">
                <div class="items">
                    <h2>
                        <%=name%>
                    </h2>
                    <a
                        href="https://docs.google.com/forms/d/e/1FAIpQLSc9HS8UN9xPjKik2ND47Jl7GX09nk1htlY5dzPykkNUAoIIBg/viewform">Apply
                        to be a member!</a>
                </div>
            </div>
        </div>
        <div class="team section section3" id="team">
            <h1>
                <%=name%>
            </h1>
            <a
                href="https://docs.google.com/forms/d/e/1FAIpQLSc9HS8UN9xPjKik2ND47Jl7GX09nk1htlY5dzPykkNUAoIIBg/viewform">Apply
                to be a member!</a>
        </div>

        <div class="team section section2" id="team">
            <h1 class="text-center ourteam reveal">Our Team</h1>
            <div class="persons">
                <% persons.forEach((person)=> { %>
                    <div class="person reveal" data-description="<%= person.bio %>">
                        <center>
                            <img src="<%=person.picture%>" alt="" class="pfp">
                        </center>

                        <h5 class="text-center">
                            <%=person.name%>
                        </h5>

                        <% if (person.role) { %>
                            <h6 class="text-center">
                                <%=person.role%>
                            </h6>
                            <% } %>
                    </div>
                    <% }) %>
            </div>
        </div>
        <div class="events section section1">
            <h1 class="text-center reveal">View Our Latest Events</h1>
            <div class="eventsHolder">
                <% events.forEach((event)=> { %>
                    <div class="reveal event active">
                        <img src="<%= event.picture %>" alt="" class="image reveal">

                        <div class="info reveal">
                            <h2>
                                <%= event.name %>
                            </h2>
                            <h5>
                                <%= event.date %>
                            </h5>
                            <h6>
                                <%= event.description %>
                            </h6>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <div class="load-more reveal">
                <h3>Load More</h3>
            </div>
        </div>
    </div>

    <div class="profile">
        <div class="individualProfile" id="profile">
            <button class="goback">Go Back</button>
            <div class="information">
                <h1></h1>
                <h5></h5>
            </div>
            <img src="./images/PFP/Chloe_Cho.webp" alt="" class="bigProfileImage">
        </div>
    </div>
    <script src="/scripts/revealingText.js"></script>
    <script src="/scripts/makePerson.js"></script>
    <script>
        function rearrangeEvents() {
            const eventContainer = document.querySelector(".eventsHolder");
            const eventHolders = Array.from(document.querySelectorAll('.event'));

            eventHolders.sort((a, b) => {
                const dateA = new Date(a.querySelector('h5').textContent.trim());
                const dateB = new Date(b.querySelector('h5').textContent.trim());
                return dateB - dateA;
            });

            eventHolders.forEach(holder => eventContainer.appendChild(holder));
        }

        rearrangeEvents();    
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <script src="/scripts/nav.js"></script>
</body>

</html>